{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": ".",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true
  },
  "exclude": [
    "*.js",
    "node_modules"
  ],
  "include": [
    "*.ts"
  ]
}
