{
  "name": "typeorm-static",
  "description": "Static TypeORM connection using env vars",
  "version": "1.0.0",
  "main": "out/index.js",
  "repository": "https://github.com/makepost/typeorm-static",
  "author": "makepost",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^4.0.2",
    "@types/mocha": "^2.2.44",
    "dotenv": "^4.0.0",
    "mocha": "^4.0.1",
    "nyc": "^11.2.1",
    "pre-commit": "^1.2.2",
    "reflect-metadata": "^0.1.10",
    "sqlite3": "^3.1.13",
    "tslint": "^5.8.0",
    "typeorm": "^0.1.1",
    "typescript": "^2.6.1"
  },
  "dependencies": {
    "@types/node": "^8.0.47",
    "@types/shortid": "^0.0.29",
    "shortid": "^2.2.8",
    "source-map-support": "^0.5.0"
  },
  "peerDependencies": {
    "typeorm": "^0.1.1"
  },
  "scripts": {
    "coverage": "nyc -a --eager -n 'out/**/*.js' -n 'src/**/*.ts' -r json -r html npm test",
    "format": "tslint --fix 'src/**/*.ts'",
    "lint": "tslint 'src/**/*.ts'",
    "prepare": "tsc -p tsconfig.json",
    "test": "node --harmony node_modules/.bin/_mocha --bail -u tdd --timeout 999999 --colors -r dotenv/config -r reflect-metadata -r source-map-support/register 'out/**/*.test.js'"
  },
  "pre-commit": [
    "lint",
    "prepare"
  ]
}
